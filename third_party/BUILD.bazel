load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")
load("@bazel_skylib//rules:build_test.bzl", "build_test")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

cmake(
    name = "lief",
    cache_entries = {
        "CMAKE_C_FLAGS": "-fPIC",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "LIEF_PYTHON_API": "off",
        "LIEF_EXAMPLES": "off",
        "LIEF_PE": "off",
        "LIEF_MACHO": "off",
        "LIEF_DEX": "off",
    },
    lib_source = "@lief//:all",
    out_static_libs = ["libLIEF.a"],
    targets = ["LIB_LIEF"],
)

# Add a few tests for third_party software here
build_test(
    name = "third_party_tests",
    targets = [
        "@sqlite3//:shell",
    ],
)
